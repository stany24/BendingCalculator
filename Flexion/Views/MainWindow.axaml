<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        xmlns:viewModels="clr-namespace:Flexion.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Flexion.Views.Main"
        x:DataType="viewModels:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Calculateur de Flexion">
    
    <Grid
        Name="MainGrid"
        Margin="5"
        ColumnDefinitions="*,10,*,10,*,10,*,10,Auto"
        RowDefinitions="*,10,*,10,Auto">
        <Grid 
            Name="GridForce"
            Margin="5"
            ColumnDefinitions="Auto,10,Auto"
            RowDefinitions="Auto,10,Auto,10,Auto"
            MinHeight="150"
            Column="0"
            Row="0">
            <TextBlock
                Name="LblForce"
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding ForceWithColonBinding}"
                VerticalAlignment="Center"></TextBlock>
            <NumericUpDown
                Name="NudForce"
                Value="{Binding Force}"
                Minimum="0.1"
                Grid.Column="2"
                Grid.Row="0"></NumericUpDown>
            <Button
                Name="BtnForce"
                Content="{Binding ModifyBinding}"
                Grid.Row="2"
                Grid.Column="0"
                Command="{Binding OpenForceEditor}"
                CommandParameter="{Binding #NudForce}"></Button>
            <TextBlock 
                Name="TbxLang"
                Grid.Row="4"
                Grid.Column="0"
                Text="{Binding LanguageWithColonBinding}"></TextBlock>
            <ComboBox 
                Name="CbxLang"
                Grid.Row="4"
                Grid.Column="2"
                ItemsSource="{Binding Languages}"
                SelectedItem="{Binding Language}"></ComboBox>
        </Grid>
        <Grid 
            Name="GridPiece"
            ColumnDefinitions="Auto,10,Auto,*"
            RowDefinitions="Auto,10,*"
            MinHeight="150"
            Column="2"
            Row="0">
            <TextBlock
                Name="LblPiece"
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding PiecesWithColonBinding}"
                VerticalAlignment="Center"></TextBlock>
            <Button
                Name="BtnPiece"
                Content="{Binding ModifyBinding}"
                Grid.Row="0"
                Grid.Column="2"
                Command="{Binding OpenPieceEditor}"></Button>
            <ListBox
                Name="LbxPiece"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                MinWidth="200"
                SelectedItems="{Binding SelectedPiecesMainWindow}"
                ItemsSource="{Binding Pieces}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Display}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate></ListBox>
        </Grid>
        <Grid 
            Name="GridLayer"
            ColumnDefinitions="Auto,10,Auto,*"
            RowDefinitions="Auto,10,*,10,*"
            MinHeight="150"
            Column="4"
            Row="0">
            <TextBlock
                Name="LblLayer"
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding LayersWithColonBinding}"
                VerticalAlignment="Center"></TextBlock>
            <Button
                Name="BtnLayer"
                Content="{Binding ModifyBinding}"
                Grid.Row="0"
                Grid.Column="2"
                Command="{Binding OpenLayerEditor}"></Button>
            <ListBox
                Name="LbxLayer"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                MinWidth="200"
                ItemsSource="{Binding Layers}"
                SelectedItems="{Binding SelectedLayersMainWindow}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Display}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate></ListBox>
            <Image 
                Name="LayerPreview"
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                Source="{Binding ImagePreviewLayerMainWindow}"></Image>
        </Grid>
        <Grid 
            Name="GridMaterial"
            ColumnDefinitions="Auto,10,Auto,*"
            RowDefinitions="Auto,10,*"
            MinHeight="150"
            Column="6"
            Row="0">
            <TextBlock
                Name="LblMaterial"
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding MaterialsWithColonBinding}"
                VerticalAlignment="Center"></TextBlock>
            <Button
                Name="BtnMaterial"
                Content="{Binding ModifyBinding}"
                Grid.Row="0"
                Grid.Column="2"
                Command="{Binding OpenMaterialEditor}"></Button>
            <ListBox
                Name="LbxMaterial"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                MinWidth="200"
                ItemsSource="{Binding Materials}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Display}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate></ListBox>
        </Grid>
        <lvc:CartesianChart 
            Name="ChartResult"
            Series="{Binding SeriesGraphFlexion}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Grid.Column="0"
            Grid.Row="2"
            Grid.ColumnSpan="9">
        </lvc:CartesianChart>
        <Button
            Name="BtnStart"
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="9"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            Content="{Binding BeginBinding}"
            Command="{Binding CalculateFlexion}"></Button>
        <Button 
            Name="HelpButton"
            Grid.Row="0"
            Grid.Column="8"
            Content="{Binding HelpBinding}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"></Button>
    </Grid>
</Window>
