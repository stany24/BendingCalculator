<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FlexionV2.Views.Editors.Layer.LayerEditor"
        Title="Éditeur de couches"
        SizeToContent="WidthAndHeight"
        CanResize="False">
    <Grid 
        Name="Grid"
        RowDefinitions="Auto,10,Auto,10,Auto,10,Auto,10,Auto,10,Auto,*"
        ColumnDefinitions="Auto,10,Auto,10,Auto"
        Margin="5">
        <TextBlock 
            Name="LblWidthCenter"
            VerticalAlignment="Center"
            Grid.Column="2"
            Grid.Row="0">Largeur au centre (mm):</TextBlock>
        <NumericUpDown 
            Name="NudWidthCenter"
            Value="1"
            Minimum="0.1"
            Grid.Column="4"
            Grid.Row="0"></NumericUpDown>
        <TextBlock 
            Name="LblWidthSide"
            VerticalAlignment="Center"
            Grid.Column="2"
            Grid.Row="2">Largeur sur les cotés (mm):</TextBlock>
        <NumericUpDown 
            Name="NudWidthSide"
            Value="1"
            Minimum="0.1"
            Grid.Column="4"
            Grid.Row="2"></NumericUpDown>
        <TextBlock 
            Name="LblHeightCenter"
            VerticalAlignment="Center"
            Grid.Column="2"
            Grid.Row="4">Hauteur au centre (mm):</TextBlock>
        <NumericUpDown 
            Name="NudHeightCenter"
            Value="1"
            Minimum="0.1"
            Grid.Column="4"
            Grid.Row="4"></NumericUpDown>
        <TextBlock 
            Name="LblHeightSide"
            VerticalAlignment="Center"
            Grid.Column="2"
            Grid.Row="6">Hauteur sur les cotés (mm):</TextBlock>
        <NumericUpDown 
            Name="NudHeightSide"
            Value="1"
            Minimum="0.1"
            Grid.Column="4"
            Grid.Row="6"></NumericUpDown>
        <TextBlock 
            Name="LblMaterial"
            VerticalAlignment="Center"
            Grid.Column="2"
            Grid.Row="8">Matière:</TextBlock>
        <ComboBox 
            Name="CbxMaterial"
            Grid.Column="4"
            Grid.Row="8"></ComboBox>
    </Grid>
</Window>
