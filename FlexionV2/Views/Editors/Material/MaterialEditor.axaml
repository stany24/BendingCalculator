<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FlexionV2.Views.Editors.Material.MaterialEditor"
        Title="MaterialEditor"
        SizeToContent="WidthAndHeight"
        CanResize="False">
        <Grid 
            Name="Grid"
            RowDefinitions="Auto,10,Auto,10,Auto,*"
            ColumnDefinitions="Auto,10,Auto,10,Auto"
            Margin="5">
            <TextBlock 
                Name="LblName"
                VerticalAlignment="Center"
                Grid.Column="2"
                Grid.Row="0">Nome:</TextBlock>
            <TextBox 
                Name="TbxName"
                Grid.Column="4"
                Grid.Row="0"></TextBox>
            <TextBlock 
                Name="LblE"
                VerticalAlignment="Center"
                Grid.Column="2"
                Grid.Row="2">E:</TextBlock>
            <NumericUpDown 
                Name="NudE"
                Value="69000000000"
                Increment="1000000000"
                Minimum="0.1"
                Grid.Column="4"
                Grid.Row="2"></NumericUpDown>
        </Grid>
</Window>
