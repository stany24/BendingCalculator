<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FlexionV2.Views.Editors.Force.ForceEditor"
        Title="ForceEditor">
    <Grid
        ColumnDefinitions="Auto,10,Auto"
        RowDefinitions="Auto,10,Auto,10,Auto,10,Auto,10,Auto"
        Margin="10">
        <TextBlock 
            Name="LblMass"
            Text="Masse:"
            Grid.Column="0"
            Grid.Row="0"></TextBlock>
        <NumericUpDown
            Name="NudMass"
            Minimum="1"
            Value="50"
            Maximum="100"
            Grid.Column="2"
            Grid.Row="0"></NumericUpDown>
        <TextBlock 
            Name="LblRadius"
            Text="Rayon:"
            Grid.Column="0"
            Grid.Row="2"></TextBlock>
        <NumericUpDown
            Name="NudRadius"
            Minimum="1"
            Value="20"
            Maximum="100"
            Grid.Column="2"
            Grid.Row="2"></NumericUpDown>
        <TextBlock 
            Name="LblSpeed"
            Text="Vitesse:"
            Grid.Column="0"
            Grid.Row="4"></TextBlock>
        <NumericUpDown
            Name="NudSpeed"
            Minimum="1"
            Value="3"
            Maximum="100"
            Grid.Column="2"
            Grid.Row="4"></NumericUpDown>
        <TextBlock 
            Name="LblGravity"
            Text="GravitÃ©:"
            Grid.Column="0"
            Grid.Row="6"></TextBlock>
        <NumericUpDown
            Name="NudGravity"
            Minimum="1"
            Value="9.81"
            Maximum="100"
            Grid.Column="2"
            Grid.Row="6"></NumericUpDown>
        <TextBlock 
            Name="LblForce"
            Text="Force:"
            Grid.Column="0"
            Grid.Row="8"></TextBlock>
        <NumericUpDown
            Name="NudForce"
            Grid.Column="2"
            Grid.Row="8"></NumericUpDown>
    </Grid>
</Window>
