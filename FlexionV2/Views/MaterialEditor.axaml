<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FlexionV2.Views.MaterialEditor"
        Title="MaterialEditor">
        <Grid 
            Name="Grid"
            RowDefinitions="Auto,10,Auto,10,Auto,10,Auto,*"
            ColumnDefinitions="Auto,10,Auto,10,Auto">
            <ListBox 
                Name="LbxMaterials"
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="8"
                MinWidth="100"></ListBox>
            <TextBlock 
                Name="LblName"
                VerticalAlignment="Center"
                Grid.Column="2"
                Grid.Row="0">Name:</TextBlock>
            <TextBox 
                Name="TbxName"
                Grid.Column="4"
                Grid.Row="0"></TextBox>
            <TextBlock 
                Name="LblE"
                VerticalAlignment="Center"
                Grid.Column="2"
                Grid.Row="2">E:</TextBlock>
            <NumericUpDown 
                Name="NudE"
                Grid.Column="4"
                Grid.Row="2"></NumericUpDown>
        </Grid>
</Window>
