<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:BendingCalculator.ViewModels"
        xmlns:converter="clr-namespace:BendingCalculator.ViewModels.Converter"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BendingCalculator.Views.Editors.Material.MaterialEditor"
        x:DataType="viewModels:MainViewModel"
        Title="{DynamicResource TitleMaterialWindow}"
        Icon="/Assets/avalonia-logo.ico"
        SizeToContent="WidthAndHeight"
        CanResize="False">
    <Grid
        Name="Grid"
        RowDefinitions="Auto,10,Auto,10,Auto,10,Auto,*"
        ColumnDefinitions="Auto,10,Auto,Auto,10,Auto,10,Auto"
        Margin="5">
        <TextBlock
            Name="LblName"
            VerticalAlignment="Center"
            Grid.Column="2"
            Grid.Row="0"
            Text="{DynamicResource NameWithColon}" />
        <TextBox
            Name="TbxName"
            Grid.Column="5"
            Grid.Row="0"
            IsEnabled="{Binding UiEnabledMaterialEditor}"
            Text="{Binding MaterialName}" />
        <TextBlock
            Name="LblColor"
            VerticalAlignment="Center"
            Grid.Column="2"
            Grid.Row="2"
            Text="Color:" />
        <ColorPicker
            Grid.Column="5"
            Grid.Row="2"
            IsEnabled="True"
            Color="{Binding Color, Mode=TwoWay}" />
        <TextBlock
            Name="LblE"
            VerticalAlignment="Center"
            Grid.Column="2"
            Grid.Row="4">
            E:
        </TextBlock>
        <ComboBox
            Name="CbxUnits"
            Grid.Column="3"
            Grid.Row="4"
            ItemsSource="{Binding Unit}"
            IsEnabled="{Binding UiEnabledMaterialEditor}"
            SelectedItem="{Binding SelectedUnit}" />
        <NumericUpDown
            Name="NudE"
            IsEnabled="{Binding UiEnabledMaterialEditor}"
            Value="{Binding EValue}"
            Increment="10"
            Minimum="1"
            Maximum="999"
            Grid.Column="5"
            Grid.Row="4" />
        <ListBox
            Name="LbxMaterials"
            Grid.Row="0"
            Grid.Column="0"
            Grid.RowSpan="8"
            SelectionMode="Multiple"
            MinWidth="200"
            SelectedItem="{Binding SelectedMaterial}"
            ItemsSource="{Binding Materials}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>
                            <Run Text="{Binding Display}" />
                            <Span
                                Foreground="{Binding Color, Converter={x:Static converter:Converters.ColorToBrushConverter}}">
                                [â– ]
                            </Span>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button
            Name="BtnAdd"
            Content="{DynamicResource Add}"
            Grid.Row="6"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Command="{Binding CreateNewMaterial}" />
        <Button
            Name="BtnRemove"
            Content="{DynamicResource Remove}"
            Grid.Row="6"
            Grid.Column="5"
            IsEnabled="{Binding UiEnabledMaterialEditor}"
            Command="{Binding RemoveMaterial}" />
        <Button
            Name="HelpButton"
            Grid.Row="2"
            Grid.Column="7"
            Content="{DynamicResource Help}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
    </Grid>
</Window>